generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Room {
  @@map("rooms")
  id Int @id @default(autoincrement())
  hotelId Int
  roomNumber String
  type String
  price Int
  status String?
  startDate DateTime?
  endDate DateTime?
  userId Int?
 
  hotel Hotel @relation(fields: [hotelId], references: [id])
  user usuario? @relation(fields: [userId], references: [id])
  Reservation Reservation[]
}
model Hotel {
  id Int @id @default(autoincrement())
  name String
  description String
  location String
  rating Float
  rooms Room[]
}


model usuario {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  rooms Room[]

  Reservation Reservation[]
}


model Reservation {
  id Int @id @default(autoincrement())
  roomId Int
  userId Int
  startDate DateTime
  endDate DateTime
  status String
  createdAt DateTime @default(now())
  
 
  room Room @relation(fields: [roomId], references: [id])
  user usuario @relation(fields: [userId], references: [id])
}
